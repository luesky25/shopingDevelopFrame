<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:padding="13dp"

        >
        <!--  android:background="@drawable/common_loading_bg"-->
        <ProgressBar
            android:id="@+id/loading_progressbar"
            style="@style/progress_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/loading_show_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/loading_progressbar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:textSize="13sp"
            android:textColor="#E2E2E2"
            android:text=""
            />
        <TextView
            android:id="@+id/loading_show_text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/loading_progressbar"
            android:layout_below="@+id/loading_show_text_one"
            android:layout_marginLeft="18dp"
            android:textColor="#777777"
            android:layout_marginTop="5dp"
            android:textSize="11sp"

            />
        <!-- android:text="请稍后.."-->
    </RelativeLayout>

</RelativeLayout>
