<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_title_bar_rl"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:clickable="true"
    android:background="@color/white">


    <ImageView
        android:id="@+id/common_left_iv"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/back_btn"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        >
    </ImageView>

    <TextView
        android:id="@+id/common_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerInParent="true"
        android:textColor="@color/title_color"
        android:drawablePadding="10dp"
        android:textSize="@dimen/title_size"
        />
    <!--  android:drawableLeft="@drawable/sheep_icon" -->
    <TextView
        android:id="@+id/common_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="21dp"
        android:visibility="gone"
        android:gravity="center"
        android:clickable="false"
        />
    <View
        android:id="@+id/common_title_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DADCDE"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
